<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Overall GPA Information -->
    <TextView
        android:id="@+id/currentGpaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current GPA: 0.0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/predictedGpaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Predicted GPA: 0.0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- View Chart Button -->
    <Button
        android:id="@+id/viewChartButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View GPA Chart"
        android:layout_marginBottom="16dp"/>

    <!-- Semester Spinner -->
    <Spinner
        android:id="@+id/semesterSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <!-- Selected Semester GPA -->
    <TextView
        android:id="@+id/selectedSemesterGpaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semester GPA: 0.0"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- RecyclerView for Course Details -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/courseRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>